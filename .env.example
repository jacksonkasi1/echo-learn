# ===========================================
# Echo-Learn Environment Variables
# ===========================================

# Upstash Vector (for embeddings storage)
UPSTASH_VECTOR_REST_URL=
UPSTASH_VECTOR_REST_TOKEN=

# Upstash Redis (for caching and state)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Google Cloud Storage
GCS_BUCKET_NAME=
GCS_PROJECT_ID=
GCS_KEY_FILE=              # Path to service account JSON key file
GCS_PUBLIC_URL=            # Public URL for file access (optional)

# Gemini AI (for embeddings and LLM)
GOOGLE_GENERATIVE_AI_API_KEY=

# Mistral OCR
MISTRAL_API_KEY=

# 11Labs Voice AI
ELEVENLABS_API_KEY=
ELEVENLABS_AGENT_ID=
ELEVENLABS_AGENT_SECRET=    # Used for verifying webhook signatures

# Server Configuration
PORT=8787
NODE_ENV=development

# Logging
LOG_LEVEL=info              # debug | info | warn | error

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Authentication (optional, for production)
API_SECRET_KEY=             # Secret key for API authentication
