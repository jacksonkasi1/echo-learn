# Server
PORT=8787
NODE_ENV=production
CORS_ORIGINS=https://yourdomain.com

# Upstash Vector
UPSTASH_VECTOR_REST_URL=https://your-endpoint-us1-vector.upstash.io
UPSTASH_VECTOR_REST_TOKEN=your-token-here

# Upstash Redis
UPSTASH_REDIS_REST_URL=https://your-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token-here

# Google Cloud Storage
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=your-bucket-name

# For local development: use key file path
GCS_KEY_FILE=gcp-service-account.json

# For Cloud Run deployment: use direct credentials (from your service account JSON)
# Extract these values from your gcp-service-account.json file:
# - GCS_CLIENT_EMAIL: the "client_email" field
# - GCS_PRIVATE_KEY: the "private_key" field (include the full key with -----BEGIN/END-----)
GCS_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GCS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Gemini AI
GOOGLE_GENERATIVE_AI_API_KEY=your-api-key

# Cohere
COHERE_API_KEY=your-api-key

# Mistral
MISTRAL_API_KEY=your-api-key

# ElevenLabs
ELEVENLABS_API_KEY=your-api-key
ELEVENLABS_AGENT_ID=your-agent-id
ELEVENLABS_AGENT_SECRET=your-secret
